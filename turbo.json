{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsconfig.json", "packages/shared/**"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "typecheck": {
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build", "typecheck"],
      "outputs": ["dist/**", "build/**", "frontend/dist/**", ".next/**"]
    },
    "preview": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
