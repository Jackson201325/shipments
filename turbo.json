{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsconfig.json", "packages/shared/**"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "typecheck": {
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build", "typecheck"],
      "outputs": ["dist/**", "build/**", "frontend/dist/**"]
    },
    "preview": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "test": { "dependsOn": ["^build"], "outputs": [] },
    "test:watch": { "cache": false, "outputs": [] },
    "test:cov": { "dependsOn": ["^build"], "outputs": ["coverage/**"] }
  }
}
